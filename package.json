    "lint": "eslint --ext .ts src"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "bun-types": "latest",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "express": "^4.18.2",
    "outdent": "^0.8.0",
    "zod": "^3.22.4"
  }
}
